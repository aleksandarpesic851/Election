@using Election.Models.ViewModels
@model IEnumerable<PartyResultViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Election Results";
}

<h2>Election Results</h2>

<div class="row">
    <div class="col-xs-12">
        <div class="box box-success" style="margin-bottom:0px">

            <div class="box-body">
                <h3 class="box-title">State Employer List</h3>
                <table class="table table-bordered table-striped" id="district-table">
                    <thead>
                        <tr>
                            <th width="15%">Party</th>
                            <th width="15%">Candidate</th>
                            <th width="15%">Logo</th>
                            <th width="15%">Votes</th>
                            <th width="15%">Registered Voters</th>
                            <th width="10%" style="background: #0094ff">Votes(%)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.candidate)
                                </td>

                                <td>
                                    <img src="@item.logo" class="logo-image" />
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.vote)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.registerdVoter)
                                </td>
                                <td style="background: #0094ff">
                                    @Html.DisplayFor(modelItem => item.percent)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- DataTables -->
<script src="~/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="~/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>

<script>
    $(function () {
        $('#district-table').DataTable();
    });
</script>