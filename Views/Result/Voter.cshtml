@using Election.Models

@model VoterModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Vote";
}

<h2>Vote</h2>

<div class="row">
    <div class="col-xs-12">
        <div class="box box-success" style="margin-bottom:0px">
            <div class="box-header" style="padding: 40px">
                <div class="row">
                    <div class="col-xs-3 col-xs-offset-1">
                        <strong>Name : </strong>@Model.username
                    </div>
                    <div class="col-xs-3 col-xs-offset-1">
                        <strong>NIC : </strong>@Model.nic
                    </div>
                    <div class="col-xs-3 col-xs-offset-1">
                        <strong>Address : </strong>@Model.address
                    </div>
                    <div class="col-xs-3 col-xs-offset-1">
                        <strong>Province : </strong>@ViewData["province"]
                    </div>
                    <div class="col-xs-3 col-xs-offset-1">
                        <strong>District : </strong>@ViewData["district"]
                    </div>
                </div>
            </div>
            <div class="box-body" style="padding-top: 50px; border-top: 1px solid #eee">
                <div class="row">
                    <div class="col-xs-2 col-xs-offset-2">
                        <img src="~/dist/img/disagree.png" class="img-responsive vote-button" onclick="vote(2)" />
                    </div>
                    <div class="col-xs-4">
                        <div class="row text-center">
                            <img src="@ViewData["partyLogo"]" class="img-responsive logo-lg-image" />
                        </div>
                        <div class="row text-center">
                            <strong>Party:</strong>@ViewData["partyName"] <br />
                            <strong>Candidate:</strong>@ViewData["partyCandidate"] <br />
                        </div>
                    </div>
                    <div class="col-xs-2">
                        <img src="~/dist/img/agree.png" class="img-responsive vote-button" onclick="vote(3)" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>

    function vote(state) {
        if (!confirm("Are you sure?")) {
            return;
        }
        $.ajax(
            {
                type: "POST",
                url: '@Url.Action("Vote")',
                data: {
                    state: state
                },
                error: function (result) {
                    alert("error");
                },
                success: function (result) {
                    if (result == true) {
                        alert("Thank you for your vote!");
                        document.location.href = "/Account/Logout";
                    }
                    else {
                        alert("There is a problem, Try Later!");
                    }
                }
            });
    }
</script>